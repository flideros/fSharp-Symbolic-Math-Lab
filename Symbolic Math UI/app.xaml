                          ClickMode="Press"
                          IsChecked="{Binding IsOverflowOpen, Mode=TwoWay, 
              RelativeSource={RelativeSource TemplatedParent}}">
                                    <Popup x:Name="OverflowPopup"
                     AllowsTransparency="true"
